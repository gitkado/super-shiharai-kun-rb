{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "MultiEdit",
      "Glob",
      "Grep",
      "LSP",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "NotebookEdit",
      "Bash(bundle exec rspec:*)",
      "Bash(bundle exec rubocop:*)",
      "Bash(bundle exec packwerk:*)",
      "Bash(bundle exec brakeman:*)",
      "Bash(bundle exec rake:*)",
      "Bash(bundle install:*)",
      "Bash(bin/rails:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git fetch:*)",
      "Bash(git rebase:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)"
    ],
    "deny": [
      "Bash(rm:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean:*)",
      "Bash(sudo:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "claude-opus-4-5",
  "disabledMcpjsonServers": [
    "serena"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash|run_bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc '\nPAYLOAD=$(cat);\nCMD=$(printf %s \"$PAYLOAD\" | jq -r \".command // .args // \\\"\\\" \");\n# force push ã‚’æ¤œå‡ºã—ãŸã‚‰ã‚¨ãƒ©ãƒ¼çµ‚äº†\nif printf %s \"$CMD\" | grep -Eq \"git[[:space:]]+push[[:space:]]+.*(--force|-f)\"; then\n  echo \"ðŸš« force push ã¯ç¦æ­¢ã•ã‚Œã¦ã„ã¾ã™ã€‚\" 1>&2\n  exit 1\nfi\nexit 0\n'"
          }
        ]
      }
    ]
  },
  "extraKnownMarketplaces": {
    "smarthr-claude-plugins": {
      "source": {
        "source": "github",
        "repo": "kufu/smarthr-claude-plugins"
      }
    }
  },
  "enabledPlugins": {
    "code-simplifier@claude-plugins-official": true,
    "ruby-lsp@claude-code-lsps": false,
    "ruby-lsp@smarthr-claude-plugins": true
  }
}
